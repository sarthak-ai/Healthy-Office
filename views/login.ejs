<%- include("./partials/messages") %>
<form action="/users/login" method="POST" novalidate>
    <p class="text-start fs-1 fw-normal">Login</p>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" name="email" id="email" placeholder="email" aria-describedby="emailHelp" required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password" placeholder="password" required>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">login</button>
    </div>
    <div class="mb-3">
      <p class="text-start fs-4 fw-normal">Not a User, Create Account <a href="/users/register">Register</a></p>
    </div>
</form>